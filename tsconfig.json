{
  "extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
    "lib": [
      "esnext",
      "DOM"
    ],
		"baseUrl": ".",
		"paths": {
			"$lib": ["src/lib"],
			"$lib/*": ["src/lib/*"]
		},
    "types": ["webextension-polyfill", "svelte"],
    "typeRoots": ["node_modules/@types"],
    "allowSyntheticDefaultImports": true
  },
	"include": ["src/**/*.ts", "src/**/*.svelte"]
}
